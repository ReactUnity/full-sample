{
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": "error",
    "@typescript-eslint/semi": [
      "error"
    ],
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "singleline": {
          "delimiter": "comma"
        }
      }
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "functions": "only-multiline"
      }
    ]
  },
  "ignorePatterns": [
    "models/generated/**"
  ]
}
