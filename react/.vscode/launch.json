  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to V8 on port 9222",
      "type": "pwa-node",
      "port": 9222,
      "request": "attach",
      "sourceMaps": true,
      "pauseForSourceMap": true,
      "localRoot": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "continueOnAttach": true,
      "trace": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
