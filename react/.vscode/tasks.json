{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start",
      "command": "npm run start",
      "type": "shell"
    },
    {
      "label": "Build",
      "command": "npm run build",
      "type": "shell"
    },
    {
      "label": "Test",
      "command": "npm run test",
      "type": "shell"
    },
    {
      "label": "Link",
      "command": "npm link ../${input:modulePick} --force",
      "type": "shell",
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "modulePick",
      "description": "Which module do you want to link?",
      "options": [
        "renderer",
        "scripts"
      ],
      "default": "component"
    }
  ]
}
